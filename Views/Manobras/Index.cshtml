@model IEnumerable<TaDandoOnda.Models.Manobra>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aérea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDeOnda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surfista)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aérea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDeOnda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surfista.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ManobraId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ManobraId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ManobraId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
